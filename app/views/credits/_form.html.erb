  	<%= f.input :user_id, collection: User.all, label_method: :full_name %>
    
<div class="input-group">
  <span class="input-group-addon">$</span>
  <input type="text" class="form-control" f.input :amount>
  <span class="input-group-addon">.00</span>
</div>


    <%= f.input :credit_type %>
  </div>

