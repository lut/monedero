<table class="table table-striped table-hover">
  <tr>
    <th margin: 10px >ID</th>
    <th>Comercio</th>
    <th>Usuario</th>
    <th>Cantidad</th>
    <th>Tipo</th>
    <th>Fecha/Hora Creacion</th> 
  </tr>

<% @credits.each do |credit| %>
  <tr>
    <td><%= credit.id %></td>
    <td><%= credit.merchant.name %></td>
    <td><%= credit.user.full_name %></td>
    <td><%= credit.amount %></td>
    <td><%= credit.credit_type %></td>
    <td><%= credit.created_at %></td>
    <td><%= link_to 'Show', credit %></td>
    <td><%= link_to 'Edit', edit_credit_path(credit) %></td>
    <td><%= link_to 'Destroy', credit, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
  </tr>
<% end %>
</table>

