<div class="page-header">
  <h1>Cr√©dito</h1>
</div>

<%= link_to "Otorgar credito", new_credit_path, class: "btn btn-default navbar-btn" %>

<table class="table table-striped table-hover">
  <tr>
    <th margin: 10px >ID</th>
    <th>Comercio</th>
    <th>Usuario</th>
    <th>Cantidad</th>
    <th>Tipo</th>
    <th>Fecha/Hora Creacion</th> 
  </tr>

<% @credits.each do |credit| %>
  <tr>
    <td><%= link_to credit.id, credit %></td>
    <td><%= link_to credit.merchant.name, merchant_path(credit.merchant) %></td>
    <td><%= link_to credit.user.full_name, profile_path(credit.user) %></td>
    <td><%= credit.amount %></td>
    <td><%= credit.credit_type %></td>
    <td><%= credit.created_at %></td>
    <td><%= link_to 'Ver', credit %></td>
    <td><%= link_to 'Editar', edit_credit_path(credit) %></td>
    <td><%= link_to 'Borrar', credit, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Credit', new_credit_path %>
