<% if current_user.try(:admin?) %>

  <%= link_to "Otorgar credito", new_credit_path, class: "btn btn-default navbar-btn" %>
<% end %>

<div data-role="content">
    <ul data-role="listview" data-filter="true">
    <% @credits.each do |credit| %>
    <li>
        <%= link_to credit_path(credit) do %>
        <h3><%= credit.user.full_name %></h3><p><%= credit.amount %></p>
        <% end %>
    </li>
    <% end %>
    </ul>
</div>
