<!DOCTYPE html>
<html>
<head>
  <title>Monedero</title>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>

  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

</head>
<body>

<!-- Fixed Navigation Bar ==========-->

<!-- NUEVA -->
	 <div class="navbar navbar-default navbar-fixed-top">
    	<div class="container">
      <div class= "navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a href="#" class="navbar-brand">Hasta Pronto!</a>
      </div>

      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
	        <!-- User signed-in? -->
	        <% if user_signed_in? %>     
					<li class="dropdown">
			            <a href="#" class="dropdown-toggle" data-toggle="dropdown"=><%= current_user.full_name%> <b class="caret"></b></a>
			              <ul class="dropdown-menu">
			                <li><%= link_to "Ajustes", edit_user_registration_path %></li>       
			                <li><a href="#">Extra</a></li>
			              </ul>  
					</li>
	          		<li><a href="#">Acerca de</a></li>
	          		<li><%= link_to "Cerrar Sesión", destroy_user_session_path, method: :delete %></li>


				<% else %>
					<li><%= link_to "Registrarme", new_user_registration_path %></li>
					<li><%= link_to "Iniciar Sesión", new_user_session_path %></li>
				<% end %>
		</ul>
      </div>
    </div>
  </div>


<!-- Flash Messagges====-->
	<br><br>
	<div class="container">
		<% flash.each do | type, message | %>
			<div class="alert <%= flash_class type %>">
 			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  			<%= message %>
		</div>
		<% end %>

		  <%= yield %>
	</div>



	<% if user_signed_in? %> 
		<% if current_user.try(:admin?) %>
				<nav class="navbar navbar-inverse navbar-fixed-bottom" role="navigation">
					<div class="btn-group btn-group-justified">
			  			<div class="btn-group">
			    			<%= link_to "Comercios", merchants_path, class: "icon-flag btn btn-default navbar-btn" %>
			  			</div>

			  			 <div class="btn-group">
							<%= link_to "Puntos", credits_path, class: "icon-credit btn btn-default navbar-btn" %>
						</div>

			  			<div class="btn-group">
			    			<%= link_to "Usuarios", profiles_path, class: "icon-user btn btn-default navbar-btn" %>
			  			</div>
					</div>
				</nav>
				<% else %>
				<%if current_user.try(:isMerchantUser?) %>
					<nav class="navbar navbar-inverse navbar-fixed-bottom" role="navigation">
						<div class="btn-group btn-group-justified">		
				  			<div class="btn-group">
				    			<%= link_to "Usuarios", profiles_path, class: "icon-user btn btn-default navbar-btn" %>
				  			</div>
				  			 <div class="btn-group">
								<%= link_to "Puntos", credits_path, class: "icon-credit btn btn-default navbar-btn" %>
							</div>
						</div>
					</nav>
				<% else %>

					<nav class="navbar navbar-inverse navbar-fixed-bottom" role="navigation">
						<div class="btn-group btn-group-justified">
			  				<div class="btn-group">
			    				<%= link_to "Comercios", merchants_path, class: "icon-flag btn btn-default navbar-btn" %>
			  				</div>
				 			 <div class="btn-group">
								<%= link_to "QR Code", qrcode_path(current_user), class: "icon-qrcode btn btn-default navbar-btn" %>
							</div>

							<div class="btn-group">
				    			<%= link_to "Credito", profile_path(current_user), class: "icon-credit btn btn-default navbar-btn" %>
				  			</div>
						</div>
					</nav>

				<% end %>
			<% end %>
				
	<% end %>
</body>
</html>
