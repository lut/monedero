<%= simple_form_for(@user_card) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :card_id, collection: Card.all, label: "Tarjeta", :as => :hidden  %>
	<%= f.input :user_id, collection: User.all, label_method: :first_name, label: "Usuario", :as => :hidden  %>
	<%= f.input :card_number, label: "Numero de tarjeta" %><br>

  </div>

  <div class="form-actions">
    <%= f.submit "Guardar Tarjeta", :class=> 'btn btn-primary' %><br><br>


  </div>
<% end %>

