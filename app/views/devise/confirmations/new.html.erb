<div data-role="content">

	<%= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), html: {class: "well"}, :html => { :method => :post }) do |f| %>
	  <%= devise_error_messages! %>

	  <div><%= f.label :email %><br />
	  <%= f.email_field :email, :autofocus => true %></div>

	  <div><%= f.submit "Reenviar email para confirmar mi cuenta" %></div>
	<% end %>

	<%= render "devise/shared/links" %>

</div>