<div data-role="content">
<br><br>
	<h4>¿Olvidaste tu contraseña?</h4>

	<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post },html: {class: "well"}) do |f| %>
	  	<%= devise_error_messages! %>
	  	<%= f.email_field :email, :autofocus => true, placeholder: "Email..."  %>

	  <div><%= f.submit "Enviarme email para restaurar contraseña" %></div>
	<% end %>

	<%= render "devise/shared/links" %>

</div>