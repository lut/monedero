
<div class='page-header'>
     <h1>Todos los usuarios</h1>
</div>

<% if current_user.try(:admin?) %>
	<%= link_to "Crear nuevo usuario", new_user_registration_path, class: "btn btn-default navbar-btn" %>
<% end %>

<table class="table table-striped table-hover">
		<tr>
			<th>ID</th>
			<th>Nombre</th>
			<th>Mail</th>
			<th>Admin</th>

		</tr>
		<% @user.each do |user| %>
	
		<tr>
			<td><%= link_to user.id, profile_path(user) %></td>
			<td><%= link_to user.full_name, profile_path(user) %> </td>
			<td><%= link_to user.email, profile_path(user) %> </td>
   		 	<td><%= user.admin %></td>
   		 	<td><%= link_to "Editar", edit_user_registration_path(user) %> </td>
		</tr>

	<% end %>
</table>



