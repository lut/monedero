	<h1>Total de usuarios: <%= @user.count %></h1>
	
<% if current_user.try(:admin?) %>
		<table class="table table-striped table-hover">
				<tr>
					<th>ID</th>
					<th>Nombre</th>
					<th>Mail</th>
					<th>Role</th>
					<th>Is Merchant User?</th>
					<th>Merchant Name</th>
					<th>Admin</th>
					<th>Editar</th>
				</tr>
				<% @user.each do |user| %>
			
				<tr>
					<td><%= link_to user.id, profile_path(user) %></td>
					<td><%= link_to user.first_name, profile_path(user) %> </td>
					<td><%= link_to user.email, profile_path(user) %> </td>
					<td><%= user.role %></td>
		   		 	<td><%= user.isMerchantUser %></td>
		   		 	<td><% if user.merchant_id!='' %> <%= user.merchant_id %> <% else %><% end %>

		   		 	</td>
		   		 	<td><%= user.admin %></td>
		   		 	<td><%= link_to "Editar", edit_user_registration_path(user) %> </td>

				</tr>

			<% end %>
		</table>
	<% else %>
		
		<ul class="list-group">
      
    <% @user.each do |key, value| %>
        <a href="/profiles/<%= key %>" class="list-group-item"><p>Usuario <%= key %>:  <%= value %> puntos</p></a>
    <% end %>
</ul>

<% end %>




