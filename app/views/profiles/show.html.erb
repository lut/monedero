<br><br><br>

<div data-role="header">
	<h1><%= @user.email %></h1>
</div>

<% if current_user.try(:admin?)|current_user.try(:isMerchantUser?)  %>
	<nav class="navbar" role="navigation">
		<div class="btn-group btn-group-justified">
		  			
		  			<div class="btn-group">
		  				<a class="icon-plus btn btn-success navbar-btn" href="/add_credit_to_user/<%=@user.id%>"></a>
		    			
		  			</div>
		 			 <div class="btn-group">
						<%= link_to "", new_credit_path, class: "icon-minus btn btn-danger btn-default navbar-btn" %>
					</div>
				</div>
	</nav>
<% end %>


<% if current_user.try(:admin?) %>
	<table class="table table-striped table-hover">
		<tr>
			<th>ID</th>
			<th>Comercio</th>
			<th>Cantidad</th>
			<th>Fecha/Hora Otorgado</th>
		</tr>
		
		<% @credits.each do |credit| %>
		<tr>
			<td><%= credit.id %></td>
			<td><%= link_to credit.merchant.name, merchant_path(credit.merchant) %></td>
			<td><%= credit.amount %></td>
			<td><%= credit.created_at %></td>
			<% if current_user.try(:admin?) %>
	    		<td><%= link_to 'Borrar', credit, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
	    	<% end %>
		</tr>
		<% end %>   
	</table>
<% end %> 

<% if current_user.try(:isMerchantUser?)  %>

	<table class="table table-striped table-hover">
		<tr>
			<th>Cantidad</th>
			<th>Fecha/Hora Otorgado</th>
		</tr>
		
		<% @credits.each do |credit| %>
		<tr>
			<td><%= credit.amount %></td>
			<td><%= credit.created_at %></td>
		</tr>
		<% end %>   
	</table>

	<% else %>
		<!-- User has no credits -->
		<% if @credits_count == 0 %>
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<h4>Aun no has acumulado puntos.</h4>
						<h4>Te recomendamos visitar los <a href="/merchants">comercios participantes</a> para comenzar a generar beneficios.</h4>
					</div>
				</div>
			</div>

		<% else %>
		<!-- User has at least one credit -->
			<div data-role="content">    
			    <ul data-role="listview">
			    	<% @credit_per_merchant.each do |key, value| %>
			    <li>
			        <a href="/merchants/<%= key %>"><h3>Comercio <%= key %>:  <%= value %> puntos</h3></a>
			    </li>
			    <% end %>
			    </ul>
			</div>
	<% end %>
<% end %>
 