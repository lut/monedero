<div class="page-header">
  <h1>Todos los Comercios</h1>
</div>

<%= link_to "Crear nuevo comercio", new_merchant_path, class: "btn btn-default navbar-btn" %>

<table class="table table-striped table-hover">
  <tr>
    <th>ID</th>
    <th>Comercio</th>
    <th>Fecha/Hora Creacion</th>
  </tr>

  <% @merchants.each do |merchant| %>
  <tr>
    <td><%= merchant.id %></td>
    <td><%= link_to merchant.name, merchant %></td>
    <td><%= merchant.created_at %> </td>
    <td><%= link_to "Editar", edit_merchant_path(merchant) %> </td>
    <td><%= link_to "Borrar", merchant, method: :delete, data: { confirm: "Estas seguro que deseas borrar al comercio?"} %></td>
  </tr>

  <% end %>

</table>

  